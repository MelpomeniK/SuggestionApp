@model SuggestionApp.Models.Role

@{
    ViewData["Title"] = "Create Role";
}

<h1>Create Role</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="RoleName"></label>
        <input asp-for="RoleName" class="form-control" />
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="isActive"></label>
        <input asp-for="isActive" type="checkbox" class="form-check-input" />
    </div>

    <div class="form-group">
        <label asp-for="DepartmentId">Department</label>
        <select asp-for="DepartmentId" class="form-control"
                asp-items="ViewBag.Departments">
            <option value="">-- Select Department --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="IsManager"></label>
        <input asp-for="IsManager" type="checkbox" class="form-check-input" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>