@model SuggestionApp.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<h2>Dashboard</h2>

<div class="row">
    <div class="col-md-4">
        <div class="card p-3 shadow-sm">
            <h4>Total Departments</h4>
            <p>@Model.DepartmentCount</p>
        </div>
    </div>

    <div class="card text-white bg-info mb-3">
        <div class="card-body">
            <h5 class="card-title">Managers</h5>
            <p class="card-text">@Model.ManagerRoleCount</p>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card p-3 shadow-sm">
            <h4>Total Suggestions</h4>
            <p>@Model.TotalSuggestions</p>
        </div>
    </div>
</div>