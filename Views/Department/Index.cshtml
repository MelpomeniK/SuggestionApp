@model List<SuggestionApp.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<h1>Departments</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Department</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Department ID</th>
            <th>Name</th>
            <th>Description</th>
            <th></th> <!-- Actions column -->
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var department in Model)
            {
                <tr>
                    <td>@department.DepartmentId</td>
                    <td>@department.DepartmentName</td>
                    <td>@department.Description</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@department.DepartmentId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@department.DepartmentId" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@department.DepartmentId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No departments available.</td>
            </tr>
        }
    </tbody>
</table> 
